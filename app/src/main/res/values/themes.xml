<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Matematika" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="kirmiziTheme">
        <item name="android:background">
            @drawable/kirmizi_background
        </item>
        <item name= "android:buttonStyle">
            @drawable/kirmizi_button_background
        </item>
    </style>

    <style name="maviTheme">
        <item name="android:background">
            @drawable/blue_background
        </item>
        <item name= "android:buttonStyle">
            @drawable/blue_background_button
        </item>
    </style>
</resources>