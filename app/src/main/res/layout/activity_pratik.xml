<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".pratikActivity"
    android:background="@drawable/blue_background"
android:gravity="center"
android:orientation="vertical">

<TextView
    android:layout_weight="1"
    android:id="@+id/pratik"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pratik"
    android:textSize="50sp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:textColor="@color/white" />

<Button
    android:layout_weight="1"
    android:id="@+id/pratikCarpmaBolme"
    android:layout_marginTop="8dp"
    android:textSize="20sp"
    android:text="Çarpma/Bölme"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>
<Button
    android:layout_weight="1"
    android:id="@+id/pratikToplamaCikarma"
    android:textSize="20sp"
    android:layout_marginTop="8dp"
    android:text="Toplama/Çıkarma"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>
<Button
    android:layout_weight="1"
    android:id="@+id/pratikUsKok"
    android:textSize="20sp"
    android:layout_marginTop="8dp"
    android:text="Üs/Kök"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>
<Button
    android:layout_weight="1"
    android:id="@+id/pratik2liTaban"
    android:textSize="20sp"
    android:layout_marginTop="8dp"
    android:text="2'li Taban"
    android:minWidth="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>
<Button
    android:layout_weight="1"
    android:id="@+id/pratik16liTaban"
    android:textSize="20sp"
    android:layout_marginTop="8dp"
    android:text="16'lı Taban"
    android:minWidth="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>
<Button
    android:layout_weight="1"
    android:id="@+id/pratikKarma"
    android:textSize="20sp"
    android:layout_marginTop="8dp"
    android:text="Karma"
    android:minWidth="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>
<Button
    android:layout_weight="1"
    android:id="@+id/pratikMenu"
    android:layout_margin="40dp"
    android:text="Menü"
    android:textSize="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background_button"
    app:backgroundTint="@null"/>

</LinearLayout>