<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carpmaBolmeActivity"
    android:background="@drawable/blue_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carpmaBolmeSure"
        android:text="120"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <ImageView
        android:id="@+id/carpmaBolmeIslemKutusu"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@android:drawable/editbox_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carpmaBolmeIslem"
        android:text="13x15"
        android:layout_alignTop="@id/carpmaBolmeIslemKutusu"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <ImageView
        android:id="@+id/carpmaBolmeCevapKutusu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/button_onoff_indicator_off" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carpmaBolmeCevap"
        android:text=""
        android:layout_alignTop="@id/carpmaBolmeCevapKutusu"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/carpmaBolmeGridLayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3">
        <Button
            android:id="@+id/carpmaBolmeBirButonu"
            android:textSize="30sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeIkiButonu"
            android:textSize="30sp"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeUcButonu"
            android:textSize="30sp"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeEnterButonu"
            android:textSize="30sp"
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeDortButonu"
            android:textSize="30sp"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeBesButonu"
            android:textSize="30sp"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeAltiButonu"
            android:textSize="30sp"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeSilButonu"
            android:textSize="30sp"
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeYediButonu"
            android:textSize="30sp"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeSekizButonu"
            android:textSize="30sp"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeDokuzButonu"
            android:textSize="30sp"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/carpmaBolmeSifirButonu"
            android:textSize="30sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_pratik_background_button"
            app:backgroundTint="@null"/>
    </GridLayout>

    <Button
        android:id="@+id/carpmaBolmeCikis"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:text="Çıkış"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_background_button"
        app:backgroundTint="@null"/>

</LinearLayout>

