<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pratikSonuclar"
    android:background="@drawable/blue_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pratikSonucEkrani"
        android:text="Sonuçlar"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <GridLayout
        android:id="@+id/pratikSonuclar"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cevaplananSorular"
            android:text="Cevaplanan Sayısı:"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cevaplananSoruSayisi"
            android:text="10"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yanlisSorular"
            android:text="Yanlış Sayısı:"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yanlisSorularSayisi"
            android:text="2"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dogruSorular"
            android:text="Doğru Sayısı:"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dogruSorularSayisi"
            android:text="8"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dogruYuzde"
            android:text="Doğru Yüzdesi:"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dogruYuzdesi"
            android:text="80"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </GridLayout>

    <Button
        android:id="@+id/pratikSonuclarCikis"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:text="Menü"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_background_button"
        app:backgroundTint="@null"/>
</LinearLayout>